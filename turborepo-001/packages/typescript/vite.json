{
  "extends": "./base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "plugins": [
      "typescript-plugin-css-modules"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}